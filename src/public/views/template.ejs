    	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js"></script>
	</head>
		<body style="background-color: #f2f2f2;">

			<nav class="top-bar" data-topbar>
				<section class="top-bar-section">
					<ul class="vertical medium-horizontal menu">
					<li class="divider"></li>
					<li class="Apr">
						<a href="/"><img src="/img/logo_less.png" /></a>
					</li>
					<li class="divider"></li>
					<li>
						<a href="/RelacionTutoria">RELACIÓN TUTORIA</a>
					</li>
					<li class="divider"></li>
					<li>
						<a href="/MapeoVirtual">MAPEO VIRTUAL</a>
					</li>
					<li class="divider"></li>
					<li>
						<a href="/CatalogoDeOfertas" class="inactiveLink">CATÁLOGO DE OFERTAS</a>
					</li>
					<li class="divider"></li>
					<li>
						<a href="/CompartirTemas">COMPARTIR TEMAS</a>
					</li>
					<li class="divider"></li>
					<li><a href="/CompartirExperiencias">COMPARTIR EXPERIENCIAS</a>
					</li>
					<li class="divider"></li>
				</ul>
			</section>
		</nav>
		<div class="main">

			<div class="header" style="padding-bottom:0">
        		<%= title %>
      		</div>

      		<a href="/CatalogoDeOfertas" style="position: relative; top: -28px; left: 36px;"><p style="margin-bottom:0px;">&#9001 &nbsp Volver al Catálogo de Ofertas</p></a>

			<div style="width: 950px; display:flex; padding: 25px; padding-top: 0px; margin: auto">
				<div>
				

				<a href="/app/pdfs/<%= filename %>" style="position: relative; left: 2px;" download><p style="margin-bottom:5px;">Descargar</p></a>

				<div style="width: 650px; height: 830px; overflow: hidden; box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.5);">

					<object data="/app/pdfs/<%= filename %>" type="application/pdf" width="650" height="830" style="position: relative;">
						<p>Alternative text - include a link <a href="/app/pdfs/test.pdf">to the PDF!</a></p>
					</object>

				</div>

				</div>

				<div style="flex: 1; padding-left: 25px; padding-top: 35px; padding-bottom: 20px;">

					<p style="font-family: Avenir-Medium; font-size:18px;">Competencias</p>
					<ul class="cote">
						<% comps.forEach(function(comp, index) { %>
   	 						<li style="background-color: #3a9ad9"><%= comp %></li>
						<% }); %>
					</ul>
					
					<p style="font-family: Avenir-Medium; font-size:18px;">Temas relacionados</p>
					<ul class="cote">
						<% temas.forEach(function(tema, index) { %>
   	 						<li style="background-color: #f25d53"><%= tema %></li>
						<% }); %>
					</ul>



					<form action="" id="ask" name='<%= pathName %>' method="POST" enctype="application/x-www-form-urlencoded">
                		
	                    	<p style="font-family: Avenir-Medium; font-size:18px;">Consulte al experto</p>
	                    	<p style="font-family: Avenir-Medium; font-size:18px; display: none; color: red" id="error">Please enter valid information</p>

	                    	<label>Correo electrónico	
	                        	<input type="text" name="email" id="email">
	                  		</label>
	                    	<label>Pregunta
	                        	<textarea name="question" rows="4" id="question"></textarea>
	                    	</label>
	                    	<input value="<%= email %>" name="expEmail" style="display:none">
	                    	<input value="<%= title %>" name="subject" style="display:none">
	                    	<input type="submit" class="button" value="Enviar" style="border-radius: 3px; background-color: #0187e0; border: solid 1px #979797; font-size: 14px; font-face: Avenir-Light;	width: 72px;
	height: 32px; padding: 5px;" />
            		</form>

            		<p style="font-family: Avenir-Medium; font-size:18px; display: none" id="emailSent">Email sent!</p>
					
				</div>

			</div>

			<div class="footer">
	    		<p style="font-face: Avenir-Roman; color: #f25d53; margin-bottom:0px;"> <img src="/img/logo2.png" style="width: 50px; height: 16px; margin-bottom: 5px; margin-right: 5px;"/>Aprender Con Interés A.C. </p>
	    		<p style="font-size: 10px;font-face: Helvetica-Light;">© 2016 Aprender Con Interes. All rights reserved.</p>
	    	</div>

		</div>
		
		<script>
		
			$("#ask").on('submit',function(e) {

				function validateEmail(email) {
					var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
					return re.test(email);
				}

				if (validateEmail($('#email').val()) && ($('#question').val() !== '')) {
					document.getElementById('ask').style.display='none'
					document.getElementById('emailSent').style.display='initial'
				} else {
					document.getElementById('error').style.display='initial'
					return false;
				}

			    e.preventDefault();
			    e.stopImmediatePropagation();

			    var path = 'http://ec2-54-201-39-45.us-west-2.compute.amazonaws.com/CatalogoDeOfertas/' + $('#ask').attr('name');

			    $.ajax({
			        type: "POST",
			        url: path,
			        data: $("#ask").serialize(),
			        success: function (data) {
			        	
			   		}
			    });

			    return false;

			});
		</script>

	</body>
</html>