  <body style="background-color: #f2f2f2;">

    <script type='text/javascript'>
      var isAdmin = "{{ isAdmin }}";
    </script>

    <nav class="top-bar" data-topbar>
     
      <section class="top-bar-section">
        <ul class="vertical medium-horizontal menu">
          <li class="divider"></li>
