    <div class="main">
      <div class="header" style="height:40px ;padding: 0px; width:100%; margin: auto">
        <div class="blueBar" style="float: left; height:100%;"></div>
        <p style="margin-bottom: 0px; padding-top: 25px; padding-right: 140px"> Catálogo de Ofertas </p>
        </div>
      <div class="tabordion">
        
        <section id="section1">
          <input type="radio" name="sections" id="option1" checked>
          <label for="option1">Español</label>
          <article ng-controller="EspController">
            
            <div class="grids">
              <ul>
                <li ng-repeat="oferta in ofertas" style="float: left; margin-right: 24px; margin-top: 24px; box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.5);">
                  <app-info info="oferta"></app-info>
                  <!-- <a class="btn" ng-click="remove(oferta)">Delete</a> -->
                </li>
              </ul>
            </div>

            <div class="blueBar" style="height: {{ blueheight }}px; position: relative; top: -16px; left: -160px"></div>

            <div class="footer" style="position: relative; left: -145px;">
              <p style="font-face: Avenir-Roman; color: #f25d53; margin-bottom:0px;"> <img src="/img/logo2.png" style="width: 50px; height: 16px; margin-bottom: 5px; margin-right: 5px;"/>Aprender Con Interés A.C. </p>
              <p style="font-size: 10px;font-face: Helvetica-Light;">© 2016 Aprender Con Interes. All rights reserved.</p>
            </div>

          </article>
        </section>
    
