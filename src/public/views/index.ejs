<html class="no-js" lang="en">

  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aprender Con Interés</title>
    <link rel="stylesheet" href="/stylesheets/foundation.css" />
    <link rel="stylesheet" href="/stylesheets/app.css" />
    <link rel="stylesheet" href="/stylesheets/slick.css"/>
    <link rel="stylesheet" href="/stylesheets/slick-theme.css"/>
    
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>

  </head>

  <body style="background-color: #f2f2f2" ng-app="myApp">

    <div class="indexMain">

      <div class="mainTitle">
        <img src="/img/logo2.png" style="width:130px; height: 42px;margin-bottom:15px; margin-right: 4px"/>
        Aprender Con Interés A.C.
      </div>

      <ul style="text-align: center;" id="pages" style="margin-left: 0px">
        <li style="width: 200px;">
          <a href="/RelacionTutoria">
            <img class="mainIcon mi1" src="/img/thought_circle.png" />
            <img class="mainIcon mi2" src="/img/thought_circle_hover.png" />
            <p class="MainLink">RELACIÓN TUTORIA</p>
          </a>
        </li>
        <li style="width: 160px">
          <a href="/MapeoVirtual">
            <img class="mainIcon mi1" src="/img/globe_circle.png" />
            <img class="mainIcon mi2" src="/img/globe_circle_hover.png" />
            <p class="MainLink">MAPEO VIRTUAL</p>
          </a>
        </li>
        <li style="width: 200px">
          <a href="/CatalogoDeOfertas">
            <img class="mainIcon mi1" src="/img/book_circle.png" />
            <img class="mainIcon mi2" src="/img/book_circle_hover.png" />
            <p class="MainLink">CATÁLOGO DE OFERTAS</p>
          </a>
        </li>
        <li style="width: 160px">
          <a href="/CompartirTemas">
            <img class="mainIcon mi1" src="/img/people_circle.png" />
            <img class="mainIcon mi2" src="/img/people_circle_hover.png" />
            <p class="MainLink">COMPARTIR TEMAS</p>
          </a>
        </li>
        <li style="width: 200px">
          <a href="/CompartirExperiencias">
            <img class="mainIcon mi1" src="/img/convo_circle.png" />
            <img class="mainIcon mi2" src="/img/convo_circle_hover.png" />
            <p class="MainLink">COMPARTIR EXPERIENCIAS</p>
          </a>
        </li>
      </ul>

      <div class="single-item" style="height: 314px; width: 830px; margin: auto; margin-top: 35px; margin-bottom: 80px">
        <div ng-controller="EspController">
          <div class="slicktab">
            <slick-info info="ofertas[ofertas.length - 1]"></slick-info>
          </div>
        </div>
        <div ng-controller="MatController">
          <div class="slicktab">
            <slick-info info="ofertas[ofertas.length - 1]"></slick-info>
          </div>
        </div>
        <div ng-controller="CieController">
          <div class="slicktab">
            <slick-info info="ofertas[ofertas.length - 1]"></slick-info>
          </div>
        </div>
        <div ng-controller="HisController">
          <div class="slicktab">
            <slick-info info="ofertas[ofertas.length - 1]"></slick-info>
          </div>
        </div>
      </div>

      <div class="footer"  style="margin: 25px; margin-bottom: 0">
      <p style="font-face: Avenir-Roman; color: #f25d53; margin-bottom:0px;"> <img src="/img/logo2.png" style="width: 50px; height: 16px; margin-bottom: 5px; margin-right: 5px;"/>Aprender Con Interés A.C. </p>
      <p style="font-size: 10px;font-face: Helvetica-Light;">© 2016 Aprender Con Interes. All rights reserved.</p>
    </div>

    </div>

    
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.single-item').slick({
          dots: true,
          prevArrow:"<button type='button' class='slickprevnext' style='left:-25px; margin-top: 10px;'>&#9001</button>",
          nextArrow:"<button type='button' class='slickprevnext' style='right:-23px; margin-top: 10px;'>&#9002</button>",
          autoplay:true,
          autoplaySpeed:10000,
        });
      });
    </script>

       <!-- Modules -->
    <script src="app/app.js"></script>

    <!-- Controllers -->
    <script src="app/Controllers/EspController.js"></script>
    <script src="app/Controllers/MatController.js"></script>
    <script src="app/Controllers/CieController.js"></script>
    <script src="app/Controllers/HisController.js"></script>

    <!-- Directives -->
    <script src="app/slick/slick.js"></script>

  </body>
</html>