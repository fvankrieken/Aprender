  <body style="background-color: #f2f2f2">

    <% currPage = '/' %>
    <% if (isAdmin) { %>
      <% include partials/downButton %>
    <% } %>

    <div class="indexMain">

      <div class="mainTitle">
        <img src="/img/logo2.png" style="width:130px; height: 42px;margin-bottom:15px; margin-right: 4px"/>
        Aprender Con Interés A.C.
      </div>

      <ul style="text-align: center;" id="pages" style="margin-left: 0px">
        <li style="width: 164px;">
          <a href="/RelacionTutora">
            <p class="MainLink">
            <img class="mainIcon mi1" src="/img/thought_circle.png" />
            <img class="mainIcon mi2" src="/img/thought_circle_hover.png" />
            <span>
            RELACIÓN TUTORA</p>
          </a>
        </li>
        <li style="width: 164px">
          <a href="/MapeoVirtual">
            <p class="MainLink">
            <img class="mainIcon mi1" src="/img/globe_circle.png" />
            <img class="mainIcon mi2" src="/img/globe_circle_hover.png" />
            MAPEO VIRTUAL</p>
          </a>
        </li>
        <li style="width: 164px">
          <a href="/CatalogoDeOfertas">
            <p class="MainLink">
            <img class="mainIcon mi1" src="/img/book_circle.png" />
            <img class="mainIcon mi2" src="/img/book_circle_hover.png" />
            CATÁLOGO DE OFERTAS</p>
          </a>
        </li>
        <li style="width: 164px">
          <a href="/CompartirTemas">
            <p class="MainLink">
            <img class="mainIcon mi1" src="/img/people_circle.png" />
            <img class="mainIcon mi2" src="/img/people_circle_hover.png" />
            COMPARTIR TEMAS</p>
          </a>
        </li>
        <li style="width: 164px">
          <a href="/CompartirExperiencias">
            <p class="MainLink">
            <img class="mainIcon mi1" src="/img/convo_circle.png"/>
            <img class="mainIcon mi2" src="/img/convo_circle_hover.png"/>
            COMPARTIR EXPERIENCIAS</p>
          </a>
        </li>
        <li style="width: 164px">
          <a href="/Noticias">
            <p class="MainLink">
            <img class="mainIcon mi1" src="/img/noticias_circle.png"/>
            <img class="mainIcon mi2" src="/img/noticias_circle_hover.png"/>
            NOTICIAS</p>
          </a>
        </li>
      </ul>

      
      <% var category %>

      <div class="single-item" style="height: 314px; width: 830px; margin: auto; margin-top: 35px; margin-bottom: 80px">
        
        <% slicks.forEach(function(tema, index) { %>
          <% category = tema %>
          <div style="padding: 10px 30px">
          <% include partials/slick %>
          </div>
        <% }); %>

        <div style="padding: 10px 30px">
          <div class="slicktab" style="display: flex; width: 770px; margin: 0px; height: 284;">

            <div style="padding: 25px; padding-top: 22px; width: 100%; text-align: left; position: relative;">

              <p style="font-size: 18px; font-face: Avenir-Medium; color: #4a4a4a; margin-bottom: 10px">Noticia: <%= noticia.title %></p>
              <% if (noticia.image && (noticia.image != '')) { %>
              <div style="height: 144px; width: 670px;">
                
                <p class="clamp160" style="overflow: hidden; font-size: 16px !important; font-face: Avenir-Light; color: #000000; margin-bottom: 8px; width: 560px;">
                  <%= noticia.text %>
                </p>

              </div>
              <div style="position: absolute; top: 75px; right: 25px; height: 150px; width: 150px; overflow: hidden;border: solid 4px #FFFFFF;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);">
                
                <a class='th' href="/noticiasimg/<%= noticia.image %>"><img style="height: 200px; width: auto; position: absolute; left: -70px;"src="/noticiasimg/<%= noticia.image %>"></a>
                
              </div>
              <% } else { %>

              <div style="height: 144px;">
                
                <p class="clamp160" style="overflow: hidden; font-size: 16px !important; font-face: Avenir-Light; color: #000000; margin-bottom: 8px;">
                  <%= noticia.text %>
                </p>

              </div>

              <% } %>

              <div style="position: absolute; bottom: 10px">
                <p><a class='bluelink' href="/Noticias/<%= noticia.urlID %>" style='display: inline'>Más información </a>
                
                  </p>
              </div>

            </div>

          </div>
        </div>

      </div>

      <% var footerStyle = "margin: 25px; margin-bottom: 0"%>
      <% include partials/footer %>

    </div>

    
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>
    <script type="text/javascript">
    function clamp(cl, height){
      var clamps = $(cl);
      for (var i = 0; i < clamps.length; i++) {
        var toClamp = clamps[i];
        while ($(toClamp).height() > height) {
            $(toClamp).text(function (index, text) {
                return text.replace(/\W*\s(\S)*$/, '...');
            });
        }
      }
    }

      $(document).ready(function(){
        $('.single-item').slick({
          dots: true,
          prevArrow:"<button type='button' class='slickprevnext' style='left:-7px; margin-top: 13px;'><img src='/img/left.png' style='width:13px; height: 25px;'/ ></button>",
          nextArrow:"<button type='button' class='slickprevnext' style='right:-7px; margin-top: 13px;'><img src='/img/right.png' style='width:13px; height: 25px;'/ ></button>",
          autoplay:true,
          autoplaySpeed:8000,
        });

        
        
      });

      $(window).load(function() {
        clamp('.clamp64', 64);
        clamp('.clamp106', 106);
        clamp('.clamp160', 160);
      })
    </script>


  </body>
</html>