<% var comps = category['comps'] %>
<% var temas = category['temas'] %>
<% if ((((comps.length!=1) || (comps[0]!=" ")) && comps.length!=0) || (((temas.length!=1) || (temas[0]!=" ")) && temas.length!=0)) { %>

<div class="slicktab" style="display: flex; width: 770px; margin: 0px; height: 284;">

	<div style="padding: 30px; width: 350px; text-align: left; position: relative;">
		<div style="height: 64px; overflow: hidden; margin-bottom: 15px">
			<p class="clamp64" style="font-size: 20px; font-face: Avenir-Medium; color: #4a4a4a; margin-bottom: 15px;">Nuevo tema: <%= category['title']%></p>
		</div>
		<div style="height: 96px; overflow: hidden; margin-bottom: 10px">
			<p class="clamp106" style="font-size: 15px; font-face: Avenir-Light; color: #000000; overflow: hidden"><%= category['descript']%></p>
		</div>
		<div  style="position: absolute; bottom: 25px">
			<a href="/CatalogoDeOfertas/<%= category['pathName']%>"><p>Ver este tema</p></a>
		</div>
	</div>
	<div style="height: 234px; flex: 1; margin-top: 25px; border-left: solid 1px #d1d1d1; padding-top: 0px; padding-left: 35px; padding-right: 25px; overflow: hidden;">
		<p style="margin-bottom: 5px;">Competencias</p>
		<ul class="cote2" style="margin-bottom: 0px; overflow: hidden; max-height: 92px;">
			<% comps.forEach(function(comp, index) { %>
			<li style="background-color: #3a9ad9"><%= comp %></li>
			<% }); %>
		</ul>
		<p style="margin-bottom: 5px;">Temas relacionados</p>
		<ul class="cote2" style="margin-bottom: 0px;">
			<% temas.forEach(function(tema, index) { %>
				<% var link = "/CatalogoDeOfertas/" + makeLink(tema) %>
				<a href="<%= link %>"><li style="background-color: #f25d53"><%= tema %></li></a>
			<% }); %>
		</ul>
	</div>

</div>


<% } else { %>
	<div class="slicktab" style="display: flex; width: 770px; margin: 0px; height: 284;">

		<div style="padding: 30px; width: 100%; text-align: left; position: relative;">

			<p style="font-size: 20px; font-face: Avenir-Medium; color: #4a4a4a; margin-bottom: 15px">Nuevo texto: <%= category['title']%></p>
			<div style="height: 100px; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;"
				<p style="font-size: 15px; font-face: Avenir-Light; color: #000000;"><%= category['descript']%></p>
			</div>
			<div  style="position: absolute; bottom: 25px">
				<a href="/CatalogoDeOfertas/<%= category['pathName']%>"><p>Ver este texto</p></a>
			</div>

		</div>

	</div>

<% } %>